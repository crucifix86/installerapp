<Window x:Class="PwServerInstallerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Perfect World WPF Installer" Height="700" Width="600" MinHeight="600" MinWidth="500">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Server Connection" Grid.Row="0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Host IP Address:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtHost" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <Label Content="SSH Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="SSH Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1" Margin="5"/>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Server Version" Grid.Column="0" Padding="10" Margin="0,0,5,0">
                <ComboBox x:Name="cmbVersion" Padding="5" VerticalContentAlignment="Center"/>
            </GroupBox>

            <GroupBox Header="Options" Grid.Column="1" Padding="10" Margin="5,0,0,0">
                <StackPanel>
                    <Label Content="DB 'admin' Password (leave blank to generate):"/>
                    <TextBox x:Name="txtDbPassword" />
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnInstall" Content="Begin Installation" Grid.Column="0" Padding="10" FontWeight="Bold" Click="btnInstall_Click" Margin="0,0,5,0"/>
            <Button x:Name="btnInstallPanel" Content="Install PW-Panel" Grid.Column="1" Padding="10" FontWeight="Bold" Click="btnInstallPanel_Click" Margin="5,0,0,0"/>
        </Grid>

        <ScrollViewer Grid.Row="3" Margin="0,15,0,0" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="txtLog" IsReadOnly="True" Background="#2E2E2E" Foreground="WhiteSmoke" FontFamily="Consolas" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
    </Grid>
</Window>